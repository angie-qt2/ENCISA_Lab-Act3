using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ACT17
{
    internal class Program
    {
        static void Main(string[] args)
        {
            List<string> unique = new List<string>();

            Console.WriteLine("Unique Word Counter:");

            for (int i = 1; i <= 5; i++)
            {
                Console.Write($"Enter sentence {i}: ");
                string sentence = Console.ReadLine();
                string[] words = sentence.Split(' ');

                foreach (string word in words)
                {
                    string lowerWord = word.ToLower();

                    if (!unique.Contains(lowerWord))
                    {
                        unique.Add(lowerWord);
                    }
                }
            }

            unique.Sort();

            Console.WriteLine($"\nTotal Unique Words: {unique.Count}");
            Console.WriteLine("Sorted Unique Words:");
            foreach (string word in unique)
            {
                Console.WriteLine(word);
            }
        }
        
    }
}
