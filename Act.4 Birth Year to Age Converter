using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Act4
{
    internal class Program
    {
        static void Main(string[] args)
        {
            // Initialize array to store 10 numbers
            List<string> yearOfbirth = new List<string>();
            int currentYear = DateTime.Now.Year;

            Console.WriteLine("Enter 5 birth years:");
            while (yearOfbirth.Count < 5)
            {
                Console.Write($"Year of Birth {yearOfbirth.Count + 1}: ");
                string input = Console.ReadLine();

                if (int.TryParse(input, out int year))
                {
                    yearOfbirth.Add(input);
                }
                else
                {
                    Console.WriteLine("Invalid input.");
                }
            }

            Console.WriteLine("\nAge and Classification:");
            foreach (string yearStr in yearOfbirth)
            {
                int year = Convert.ToInt32(yearStr);
                int age = currentYear - year;

                string category;
                if (age < 18)
                    category = "Minor. ";
                else if (age < 60)
                    category = "Adult. ";
                else
                    category = "Senior. ";

                Console.WriteLine($"Year of Birth: {year} \nAge: {age} \n{category}");
            }
        }
    }
}
